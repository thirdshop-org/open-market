---
import Seller from '@/layouts/dashboard/seller.astro';
import { TemplateEditor } from '@/components/TemplateEditor';

const template = {
  title: "Template Editeur - Dashboard - Open Market",
};

// Récupérer le templateId depuis l'URL
const { searchParams } = Astro.url;
const templateId = searchParams.get('id') || undefined;
---

<Seller title={template.title} pageTitle="Template Editeur">
  <TemplateEditor client:load templateId={templateId} />
</Seller>

