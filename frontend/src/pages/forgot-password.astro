---
import '../styles/global.css';
import { ForgotPasswordForm } from '@/components/ForgotPasswordForm';
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Mot de passe oublié - Open Market</title>
		<meta name="description" content="Réinitialisez votre mot de passe Open Market" />
	</head>

	<body class="bg-background">
		<div class="min-h-screen flex flex-col items-center justify-center p-4">
			<div class="w-full max-w-md space-y-8">
				<div class="text-center space-y-2">
					<h1 class="text-4xl font-bold tracking-tight">Open Market</h1>
					<p class="text-muted-foreground">
						Récupération de mot de passe
					</p>
				</div>
				
				<ForgotPasswordForm client:load />
			</div>
		</div>
	</body>
</html>

