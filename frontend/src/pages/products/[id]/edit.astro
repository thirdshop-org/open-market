---
import '../../../styles/global.css';
import { Navbar } from '@/components/Navbar';
import { ProductForm } from '@/components/ProductForm';

// Activer le SSR pour cette route dynamique
export const prerender = false;

// Récupérer l'ID depuis les paramètres de l'URL
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/products');
}
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Modifier l'annonce - Open Market</title>
		<meta name="description" content="Modifiez votre annonce sur Open Market" />
	</head>

	<body class="bg-background">
		<Navbar client:load />
		
		<main class="container mx-auto px-4 py-8">
			<div class="mb-6">
				<a href={`/products/${id}`} class="text-sm text-muted-foreground hover:text-primary transition-colors inline-flex items-center gap-1">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
					Retour au produit
				</a>
			</div>

			<div class="mb-8">
				<h1 class="text-3xl font-bold tracking-tight">Modifier l'annonce</h1>
				<p class="text-muted-foreground mt-2">
					Modifiez les informations de votre annonce
				</p>
			</div>
			
			<ProductForm client:load productId={id} />
		</main>

		<footer class="border-t py-8 mt-20">
			<div class="container mx-auto px-4 text-center text-sm text-muted-foreground">
				<p>&copy; 2025 Open Market. Tous droits réservés.</p>
			</div>
		</footer>
	</body>
</html>

