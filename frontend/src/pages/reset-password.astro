---
import '../styles/global.css';
import { ResetPasswordForm } from '@/components/ResetPasswordForm';

// Récupérer le token depuis l'URL
const token = Astro.url.searchParams.get('token') || '';
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Réinitialiser le mot de passe - Open Market</title>
		<meta name="description" content="Définissez un nouveau mot de passe pour votre compte" />
	</head>

	<body class="bg-background">
		<div class="min-h-screen flex flex-col items-center justify-center p-4">
			<div class="w-full max-w-md space-y-8">
				<div class="text-center space-y-2">
					<h1 class="text-4xl font-bold tracking-tight">Open Market</h1>
					<p class="text-muted-foreground">
						Réinitialisation du mot de passe
					</p>
				</div>
				
				<ResetPasswordForm client:load token={token} />
			</div>
		</div>
	</body>
</html>

