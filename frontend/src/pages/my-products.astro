---
import '../styles/global.css';
import { Navbar } from '@/components/Navbar';
import { ProductsWithSearch } from '@/components/ProductsWithSearch';
import { ButtonLink } from '@/components/ButtonLink';
import { Plus } from 'lucide-react';
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Mes annonces - Open Market</title>
		<meta name="description" content="Gérez vos annonces sur Open Market" />
	</head>

	<body class="bg-background">
		<Navbar client:load />
		
		<main class="container mx-auto px-4 py-8">
			<!-- Header -->
			<div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-8">
				<div>
					<h1 class="text-3xl font-bold tracking-tight">Mes annonces</h1>
					<p class="text-muted-foreground mt-2">
						Gérez toutes vos annonces en un seul endroit
					</p>
				</div>
				<ButtonLink 
					href="/products/new" 
					label="Créer une annonce"
					client:load
				>
					<Plus className="h-4 w-4" slot="icon" />
				</ButtonLink>
			</div>

			<!-- Recherche et liste des produits -->
			<ProductsWithSearch client:load myProducts={true} showStatus={true} />
		</main>

		<footer class="border-t py-8 mt-20">
			<div class="container mx-auto px-4 text-center text-sm text-muted-foreground">
				<p>&copy; 2025 Open Market. Tous droits réservés.</p>
			</div>
		</footer>
	</body>
</html>

