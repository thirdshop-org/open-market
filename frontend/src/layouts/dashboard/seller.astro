---
import Main from '../main.astro';
import { DashboardLayout } from '@/components/DashboardLayout';

// Props interface pour le template
interface Props {
  title: string;
  pageTitle?: string;
  breadcrumbs?: Array<{
    label: string;
    href?: string;
  }>;
}

const { 
  title, 
  pageTitle,
  breadcrumbs = [{ label: 'Dashboard', href: '/dashboard' }]
} = Astro.props;
---

<Main content={{ title }}>
  
  <DashboardLayout 
    client:load
    pageTitle={pageTitle || title}
    breadcrumbs={breadcrumbs}
  >
    <slot />
  </DashboardLayout>
</Main>